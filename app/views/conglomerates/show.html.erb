<h1>Companies located at <%= @conglomerate.name %></h1>

<div class="container">
    <div>
        <ul class="list-group">
            <% @companies.each do |company| %>
                <%= link_to company.name, company_path(company), class: "list-group-item list-group-item-action"%>
            <% end %>
        </ul>
    </div>
</div>